# This file is included in the main Makefile and also parsed
# into autoconf.h.

CONFIG_MCU=atmega644p
#CONFIG_MCU=atmega1284p
CONFIG_MCU_FREQ=8000000

CONFIG_HARDWARE_VARIANT=3
CONFIG_BOOT_DEVID=0x5053524c

CONFIG_UART_DEBUG=n
CONFIG_UART_BAUDRATE=19200

CONFIG_SDHC_SUPPORT=y
CONFIG_SD_AUTO_RETRIES=10
CONFIG_NEW_SDLIB=y
CONFIG_FLASH_CRC_CHECK=n
CONFIG_BOOT_NAME=bootloader-larsp-644p
CONFIG_LINKER_RELAX=y
